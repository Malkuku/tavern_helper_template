{
  "rules": {
    "根据经验值解锁开发等级": {
      "enable": true,
      "path": "身体开发等级.*.*",
      "order": 0,
      "handle": {
        "检查经验并升级": {
          "order": 0,
          "if": "<<if> $[角色.*.特殊状态.开发经验值.*] ?[>] &[{num}50] >",
          "op": "<<op> $[身体开发等级.*.*] #[=] &[{num}1] >"
        }
      }
    }
  }
}
