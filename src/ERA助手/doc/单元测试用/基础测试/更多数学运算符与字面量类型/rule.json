{
  "rules": {
    "计算魔力亲和度": {
      "enable": true,
      "path": "*",
      "order": 0,
      "handle": {
        "计算并赋值": {
          "order": 0,
          "op": "<<op> $[角色.橘瑠奈.特殊状态.好感度] #[=] &[{num}3] #[**] &[{num}4] #[%] &[{num}10] >"
        }
      }
    },
    "根据亲和度更新状态": {
      "enable": true,
      "path": "*",
      "order": 1,
      "if": "<<if> $[角色.橘瑠奈.特殊状态.好感度] ?[==] &[{num}1] >",
      "handle": {
        "设置想法": {
          "order": 0,
          "op": "<<op> $[角色.橘瑠奈.当前想法] #[=] &[{str}魔力已校准] >"
        },
        "设置出场": {
          "order": 1,
          "op": "<<op> $[角色.橘瑠奈.已出场] #[=] &[{bool}true] >"
        }
      }
    }
  }
}
