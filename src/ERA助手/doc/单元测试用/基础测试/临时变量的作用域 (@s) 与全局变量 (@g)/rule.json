{
  "rules": {
    "规则A_设置变量": {
      "enable": true,
      "path": "*",
      "order": 0,
      "handle": {
        "设置临时和全局变量": {
          "order": 0,
          "op": "<<op> @[{s}temp_val] #[=] &[{num}100] >"
        },
        "设置全局变量": {
          "order": 1,
          "op": "<<op> @[{g}global_val] #[=] &[{num}200] >"
        },
        "在规则内使用临时变量": {
          "order": 2,
          "op": "<<op> $[角色.星宫诗羽.特殊状态.好感度] #[=] @[{s}temp_val] >"
        }
      }
    },
    "规则B_读取变量": {
      "enable": true,
      "path": "*",
      "order": 1,
      "handle": {
        "尝试读取临时变量_应失败": {
          "order": 0,
          "if": "<<if> @[{s}temp_val] ?[==] &[{num}100] >",
          "op": "<<op> $[世界.地点] #[=] &[{str}读取临时变量成功] >"
        },
        "读取全局变量_应成功": {
          "order": 1,
          "op": "<<op> $[角色.白石䌷.特殊状态.好感度] #[=] @[{g}global_val] #[+] &[{num}50] >"
        },
        "修改全局变量": {
          "order": 2,
          "op": "<<op> @[{g}global_val] #[=] &[{num}999] >"
        }
      }
    },
    "规则C_验证全局变量修改": {
      "enable": true,
      "path": "*",
      "order": 2,
      "handle": {
        "读取修改后的全局变量": {
          "order": 0,
          "op": "<<op> $[角色.橘瑠奈.特殊状态.好感度] #[=] @[{g}global_val] >"
        }
      }
    }
  }
}
