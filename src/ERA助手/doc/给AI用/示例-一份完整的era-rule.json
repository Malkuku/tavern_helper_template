{
  "rules": {
    "好感度池自增": {
      "enable": true,
      "path": "*",
      "order": 0,
      "handle": {
        "好感度池自增": {
          "order": 0,
          "loop": 1,
          "if": "",
          "op": "<<op> $[好感度池.*] #[=] $[好感度池.*] #[+] &[{num}5] >"
        }
      },
      "range": [],
      "limit": [],
      "loop": 1,
      "if": ""
    },
    "限制好感度变化值变化": {
      "enable": true,
      "path": "角色.*.特殊状态.好感度变化值",
      "order": 1,
      "handle": {
        "和好感度池取小值": {
          "order": 0,
          "loop": 1,
          "if": "",
          "op": "<<op> $[角色.*.特殊状态.好感度变化值] #[=] #[{min} $[角色.*.特殊状态.好感度变化值] $[好感度池.*] ] >"
        },
        "减少好感度池": {
          "order": 1,
          "loop": 1,
          "if": "",
          "op": "<<op> $[好感度池.*] #[=] $[好感度池.*] #[-] $[角色.*.特殊状态.好感度变化值] >"
        }
      },
      "range": [],
      "limit": [
        -5,
        40
      ],
      "if": ""
    },
    "应用好感度变化": {
      "enable": true,
      "path": "*",
      "order": 3,
      "handle": {
        "将变化值加到好感度中": {
          "order": 0,
          "if": "",
          "op": "<<op> $[角色.*.特殊状态.好感度] #[=] $[角色.*.特殊状态.好感度] #[+] $[角色.*.特殊状态.好感度变化值] >",
          "loop": 1
        },
        "将变化值归零": {
          "order": 1,
          "if": "",
          "op": "<<op> $[角色.*.特殊状态.好感度变化值] #[=]  &[{num}0] >",
          "loop": 1
        }
      },
      "range": [],
      "limit": [
        "",
        ""
      ],
      "loop": 1,
      "if": ""
    },
    "升级身体开发等级": {
      "enable": true,
      "path": "身体开发等级.*.*",
      "order": 4,
      "handle": {
        "等级提升": {
          "order": 0,
          "loop": 1,
          "if": "",
          "op": "<<op> $[身体开发等级.*.*] #[=] $[身体开发等级.*.*] #[+] &[{num}1] >"
        },
        "扣除经验值": {
          "order": 1,
          "loop": 1,
          "if": "",
          "op": "<<op> $[角色.*.特殊状态.开发经验值.*] #[=] $[角色.*.特殊状态.开发经验值.*] #[-] #[{floor}(&[{num}7] #[*] #[{ln}($[身体开发等级.*.*])] #[+] &[{num}5])] >"
        }
      },
      "range": [],
      "limit": [],
      "loop": 5,
      "if": "<<if> $[角色.*.特殊状态.开发经验值.*] ?[>=] #[{floor}(&[{num}7] #[*] #[{ln}($[身体开发等级.*.*] #[+] &[{num}1])] #[+] &[{num}5])] >"
    }
  }
}
